{
  "name": "hardlink-manager",
  "version": "0.0.3",
  "description": "Utility for managing hardlinks on macOS",
  "main": "build/index.js",
  "bin": {
    "hlnm": "bin/cli"
  },
  "scripts": {
    "dev": "bob dev",
    "build": "bob build",
    "clean": "rm -rf build",
    "prepublish": "npm run build"
  },
  "bob": {
    "babel": {
      "src": "src",
      "dest": "build",
      "watch": "src/**/*.js"
    }
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1"
  },
  "keywords": [
    "hln", "hardlink", "hard link"
  ],
  "author": "Eliot Akira",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliot-akira/hardlink-manager.git"
  },
  "license": "MIT"
}
